@model GestionAlquiler.Models.Inquilino

@{
    ViewData["Title"] = "Edición del inquilino";
}

<h1>Edición del inquilino</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="idInquilino" />

                    <span asp-validation-for="idInquilino" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="nombre" class="control-label">Nombre:</label>
                    <input asp-for="nombre" class="form-control" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="dni" class="control-label">DNI:</label>
                    <input asp-for="dni" class="form-control" />
                    <span asp-validation-for="dni" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="telefono" class="control-label">Teléfono:</label>
                    <input asp-for="telefono" class="form-control" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="email" class="control-label">Email:</label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-info ml-2">↩️ Volver al listado</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="mensajeDiv" class="alert alert-success mt-4" style="display:@(ViewBag.mensaje != null ? "block" : "none")">
    @ViewBag.mensaje
</div>

<div id="mensajeError" class="alert alert-danger" style="display:@(ViewBag.mensajeError != null ? "block" : "none")">
    @ViewBag.mensajeError
</div>

@if (ViewBag.mensaje != null)
{
    <script>
        setTimeout(function () {
            window.location.href = '@Url.Action("Index", "Inquilino")';
        }, 1000);
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section CerrarSesion {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Cerrar sesión</a>
        </li>
    </ul>
}
