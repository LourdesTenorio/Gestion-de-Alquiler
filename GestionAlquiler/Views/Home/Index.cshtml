@{
    ViewData["Title"] = "Inicio";
}

<h1 style="text-align: center;">Bienvenido a la Gestión de Alquiler</h1>

<style>
    .card {
        max-width: 18rem;
    }

    .card-img-top {
        max-height: 200px;
        object-fit: cover;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card mb-4">
                <img class="card-img-top" src="https://img.freepik.com/vector-premium/estudiante-que-usa-telefono-inteligente-ilustracion-campus_24640-50232.jpg?w=740" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Inquilinos</h5>
                    <a class="btn btn-primary" asp-area="" asp-controller="Inquilino" asp-action="Index">Gestionar</a>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card mb-4">
                <img class="card-img-top" src="https://img.freepik.com/vector-premium/ilustracion-dibujos-animados-dormitorio-cama-escritorio_895122-425.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Habitación</h5>
                    <a class="btn btn-primary" asp-area="" asp-controller="Habitacion" asp-action="ListadoHabitaciones">Gestionar</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card mb-4">
                <img class="card-img-top" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRsHkQ1-z2SRUWWE6B7KMszTkBSkR4H2KsRh97Gq6w4xw&s" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Alquiler</h5>
                    <a class="btn btn-primary" asp-area="" asp-controller="Alquiler" asp-action="Listado">Gestionar</a>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card mb-4">
                <img class="card-img-top" src="https://static.vecteezy.com/system/resources/previews/015/873/514/non_2x/success-payment-in-hand-illustration-in-flat-style-approved-money-illustration-on-isolated-background-successful-pay-sign-business-concept-vector.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Pagos</h5>
                    <a class="btn btn-primary" asp-area="" asp-controller="Pagos" asp-action="ListadoPagos">Gestionar</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section CerrarSesion {
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Cerrar sesión</a>
        </li>
    </ul>
}